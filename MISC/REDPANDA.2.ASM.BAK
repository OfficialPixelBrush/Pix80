; RED PANDA SPIN
LD A,0b00001100     ; turn on display
OUT (1),A
LD A,0b10000000     ; set DRAM Address
OUT (1),A
; draw the 8 characters
LD A,0
OUT (0),A
LD A,1
OUT (0),A
LD A,2
OUT (0),A
LD A,3
OUT (0),A
LD A,0b11000000     ; set DRAM Address to second row
OUT (1),A
LD A,4
OUT (0),A
LD A,5
OUT (0),A
LD A,6
OUT (0),A
LD A,7
OUT (0),A
; very cheap, but functional

LD A,0b01000000     ; set CGRAM Address
OUT (1),A
; load byte into Char
LD B,0
LD HL,panda0
continueLoading:
LD A,(HL) ; load contents of mem location HL
OUT (0),A ; output pixel data
INC HL    ; increase to next location
LD A,64   ; load 32 into A
INC B     ; count B up
CP B      ; check if B is 32
JP NZ,continueLoading
HALT


panda0:
    INCLUDEBINARY "image.bin"
